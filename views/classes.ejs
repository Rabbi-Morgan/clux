<body>
    <header class="header">
        <div class="headerCont px-2 d-flex justify-content-between align-items-center text-white py-4 px-2">
            <div class="">
                <a href="https://clubxuniversity.com/"><img class="logo" src="./logo.png" alt="logo"></a>
            </div>
            <div class="text-end">
                <a href="/logout" class="btn px-4" style="background-color: #DAA425; color:white;"><i class="fa fa-sign-out"></i> Logout</a>
            </div>
        </div>
    </header>
    <section>

        <div class="preloader bg-secondary">
            <img src="/preloader.gif" width="60" height="60" alt="spinner">
        </div>
        
    
        <div  class="container-fluid mx-auto px-md-5 mt-5 mt-5">
    
            <div class="g-3 p-2 ">
                <div class="d-flex flex-column-reverse flex-md-row justify-content-between align-items-center mb-4 mb-md-4 ">

                    <div class="createClass p-2">
                        <a href="/addclass" class="btn btn-light text-white py-3 px-4"><i class="fa fa-plus"></i> Create Virtual Class</a>
                    </div>
                    <div class="time d-flex mb-3 mb-md-auto flex-column rounded text-dark justify-content-between align-items-center bg-white" id="time">
                        <small class="fw-bold"> Date and Time</small>
                        <div class="mt-2 fs-4 fw-bold">
                         <i class="fas fa-clock text-warning"></i>   
                         <span id="time_date"></span>

                         </div>
                         
                    </div>
                </div>
                <div class="table-responsive" id="classes">
                    <table class="table p-4 rounded classTable bg-white table-hover align-middle table" id="class">
                        
                    </table>
                </div>
            </div>
    </section>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

